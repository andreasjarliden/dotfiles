[user]
	name = Andreas JaÌˆrliden
	email = andreas@littlemarauder.com
[color]
	ui = auto
[core]
	editor = vim 
	excludesfile = /Users/andreas/.gitignore_global
	trustctime = false
[rebase]
	autosquash = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	s = status
	l = "!source ~/.githelpers && pretty_git_log"
	la = !git l --all
	r = !git l -15
	ra = !git r --all
	d = diff
	dc = diff --cached
	ci = commit --verbose
	co = checkout
